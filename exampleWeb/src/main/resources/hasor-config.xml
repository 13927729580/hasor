<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描路径 -->
		<loadPackages>net.demo.hasor.*</loadPackages>
		<!-- demo程序启动入口 -->
		<startup>net.demo.hasor.core.MyModule</startup>
		<!-- 使用模版插件，并指定模版引擎为freemarker -->
		<template urlPatterns="htm;html;" engine="freemarker" />
		<!-- web请求响应编码配置 -->
		<encoding requestEncoding="utf-8" responseEncoding="utf-8" />
	</hasor>

	<!-- Demo程序用到的配置 -->
	<myName>ZZZ</myName>
</config>