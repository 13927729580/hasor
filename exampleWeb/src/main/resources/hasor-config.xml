<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">
    <!-- 框架配置 -->
    <hasor>
        <!-- 包扫描路径 -->
        <loadPackages>net.demo.hasor.*</loadPackages>
        <!-- demo程序启动入口 -->
        <startup>net.demo.hasor.core.StartModule</startup>
        <!-- 使用模版插件，并指定模版引擎为freemarker -->
        <template urlPatterns="htm;html;" engine="freemarker"/>
        <!-- web请求响应编码配置 -->
        <encoding requestEncoding="utf-8" responseEncoding="utf-8"/>

        <environmentVar></environmentVar>
    </hasor>


    <injectVars>
        <curentVersion>2.4.0</curentVersion>
        <qqAdmins>${admins}</qqAdmins>
    </injectVars>
    <!--  数据库链接 -->
    <jdbcSettings>
        <jdbcDriver>${jdbc.driver}</jdbcDriver>
        <jdbcURL>${jdbc.url}</jdbcURL>
        <userName>${jdbc.user}</userName>
        <userPassword>${jdbc.password}</userPassword>
    </jdbcSettings>
</config>