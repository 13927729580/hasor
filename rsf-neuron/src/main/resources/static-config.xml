<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/rsf-neuron">
    <!-- 框架配置，包扫描范围 -->
    <hasor>
        <loadPackages>net.hasor.neuron.*</loadPackages>

        <!-- Neuron框架启动入口 -->
        <modules>
            <module>net.hasor.neuron.bootstrap.RsfNeuronModule</module>
        </modules>

        <!-- Neuron框架环境变量 -->
        <environmentVar>
            <!-- 服务器ID -->
            <RSF_NEURON_SERVER_ID>local</RSF_NEURON_SERVER_ID>
            <!-- 集群服务器列表 -->
            <RSF_NEURON_SERVERS></RSF_NEURON_SERVERS>

            <!-- 数据存放目录 -->
            <RSF_NEURON_DATA_HOME>%WORK_HOME%/neuron/data</RSF_NEURON_DATA_HOME>
            <!-- 数据快照目录 -->
            <RSF_NEURON_SNAPSHOT_HOME>%WORK_HOME%/neuron/snapshot</RSF_NEURON_SNAPSHOT_HOME>

        </environmentVar>
    </hasor>

    <!-- Neuron (分布式协调框架) -->
    <hasor.rsfNeuron serviceID="${RSF_NEURON_SERVER_ID}">
        <!-- 集群服务器列表 -->
        <servers>${RSF_NEURON_SERVERS}</servers>
        <!-- 基准心跳时间 -->
        <timeout>150</timeout>
    </hasor.rsfNeuron>

</config>