<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">

	<rsfCenter workAt="slave">
		<!-- 要加入的集群列表 -->
		<zooKeeper.zkServers>
			<server sid="1" bindPort="2181" electionPort="2191">local</server>
			<server sid="2" bindPort="2182" electionPort="2192">local</server>
			<server sid="3" bindPort="2183" electionPort="2193">local</server>
			<server sid="4" bindPort="2184" electionPort="2194">local</server>
		</zooKeeper.zkServers>
		<!-- RSF消息通信使用端口 -->
		<rsfPort>2175</rsfPort>
	</rsfCenter>

	<hasor.environmentVar>
		<WORK_HOME>%USER.HOME%/hasor-work/rsf-center-e</WORK_HOME>
	</hasor.environmentVar>
</config>