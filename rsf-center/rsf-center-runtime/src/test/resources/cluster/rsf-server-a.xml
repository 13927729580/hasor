<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://project.hasor.net/hasor/schema/main">

	<rsfCenter workAt="master" serverID="1">
		<!-- master模式下Zookeeper集群列表 -->
		<zooKeeper.zkServers>
			<server sid="1" bindPort="2181" electionPort="2191">127.0.0.1</server>
			<server sid="2" bindPort="2182" electionPort="2192">127.0.0.1</server>
			<server sid="3" bindPort="2183" electionPort="2193">127.0.0.1</server>
			<server sid="4" bindPort="2184" electionPort="2194">127.0.0.1</server>
		</zooKeeper.zkServers>

		<!-- 绑定的本地IP地址 -->
		<bindAddress>127.0.0.1</bindAddress>
		<!-- RSF消息通信使用端口 -->
		<rsfPort>2171</rsfPort>
		<!-- master和alone模式下，Zookeeper客户端连入端口 -->
		<zooKeeper.bindPort>2181</zooKeeper.bindPort>
		<!-- master工作模式下，Zookeeper选举端口 -->
		<zooKeeper.electionPort>2191</zooKeeper.electionPort>
	</rsfCenter>

	<hasor.environmentVar>
		<WORK_HOME>%USER.HOME%/hasor-work/rsf-center-a</WORK_HOME>
	</hasor.environmentVar>
</config>